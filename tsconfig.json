{
  "include": [
    "src/**/*.ts",
    "src/@types/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "outDir": "lib",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "preserveConstEnums": true,
    "declaration": false,
    "noEmitOnError": false
  }
}
